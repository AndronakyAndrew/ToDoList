@model TodoItem

<h1>Delete Task</h1>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div>
        <h4>Are you sure you want to delete this task?</h4>
        <div>
            <p>@Model.Title</p>
        </div>
        <div>
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>